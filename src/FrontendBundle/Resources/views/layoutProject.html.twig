{% extends '@Frontend/layout.html.twig' %}

{% block move %}
    id="move"
{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/projects.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/carousel.css') }}">
    <link type="text/css" rel="stylesheet" href="{{ asset('assets/css/single-project.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/projects.js') }}"></script>
    <script src="{{ asset('assets/js/single-project.js') }}"></script>
{% endblock %}

{% block body %}
    <div id="main" class="projects single">
        <div class="container brand1">
            <a href="{{ path('homepage') }}"> <img src="{{ asset('assets/images/capro.png') }}" class="logo-single"></a>
        </div>
        <div class="container cont-carousel">
            <div data-ride="carousel" class="carousel slide" id="single-carousel">
                <div role="listbox" class="carousel-inner">
                    {% block carousel %}{% endblock %}
                </div>
                <div>
                    <a href="#single-carousel" role="button" data-slide="prev" class="left carousel-control"><i class="icon ion-ios-arrow-thin-left"></i><span class="sr-only">Previous</span></a>
                    <a href="#single-carousel" role="button" data-slide="next" class="right carousel-control"><i class="icon ion-ios-arrow-thin-right"></i><span class="sr-only">Next</span></a>
                </div>
            </div>
        </div>
        <div class="container wrap">
            <div class="options hide">
                <span class="progress-line"> </span>
                <a href="{{ path('projects') }}" class="first">PROYECTOS </a>
                <a href="#" class="middle">INFO </a>
                <a href="{% block siguiente %}{% endblock %}" class="last">SIGUIENTE PROYECTO</a>
                <div class="content">
                    <h4 class="text-center">{% block titulo %}{% endblock %}</h4>
                    <p class="text-center">{% block descripcion %}{% endblock %}</p>
                    <p class="text-center">COMPARTIR </p>
                    <ul>
                        <li>
                            <script type="text/javascript" async defer src="https://assets.pinterest.com/js/pinit.js"></script>
                            <a data-pin-do="buttonBookmark" href="https://www.pinterest.com/pin/create/button/?url=http://pin.it/W007sZO&media={% block imagen %}{% endblock %}&description=Creaciones CAPRO"></a>
                        </li>
                        <li>
                            <div id="fb-root"></div>
                            <script>(function(d, s, id) {
                                    var js, fjs = d.getElementsByTagName(s)[0];
                                    if (d.getElementById(id)) return;
                                    js = d.createElement(s); js.id = id;
                                    js.src = "//connect.facebook.net/es_LA/sdk.js#xfbml=1&version=v2.10";
                                    fjs.parentNode.insertBefore(js, fjs);
                                }(document, 'script', 'facebook-jssdk'));</script>
                            <div class="fb-share-button" data-href="{{ absolute_url(path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))) }}" data-layout="button_count" data-size="small" data-mobile-iframe="false"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ absolute_url(path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))) }}&amp;src=sdkpreparse">Compartir</a></div>
                        </li>
                        <li>
                            <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
                            <a href="https://twitter.com/share" class="twitter-share-button" data-url="{{ absolute_url(path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))) }}" data-text="{{ block('titulo')|trim }}" data-size="small" data-hashtags="CAPROCarpinteria">Tweet</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}