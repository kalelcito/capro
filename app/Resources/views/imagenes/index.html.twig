    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'Capro Carpinter√≠a','submenu':'Imagenes'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Imagenes</h3>
               {#<p class="text-muted m-b-30">{{ Imagenes</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th>   <th>Nombre</th>     <th>Tipo</th>   <th>Activo</th>    <th>Actualizado</th>                        <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for imagene in imagenes %}
                    <tr>
                        <td>{{ i }}</td>   <td>{{ imagene.nombre }}</td>  <td>{{ imagene.tipo|tipo }}</td>                           <td>{{ imagene.activo|sino }}</td>                    <td>{% if imagene.updatedat %}{{ imagene.updatedat|date('Y-m-d') }}{% endif %}</td>                                <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('imagenes_show', { 'id': imagene.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        <a href="{{ path('imagenes_edit', { 'id': imagene.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
